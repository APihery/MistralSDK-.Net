<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>
    
    <!-- Project metadata -->
    <Title>Mistral AI SDK for .NET</Title>
    <Description>A comprehensive .NET SDK for interacting with the Mistral AI API, providing easy-to-use methods for chat completions and other AI services.</Description>
    <Authors>Your Name</Authors>
    <Company>Your Company</Company>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>mistral;ai;chat;completion;api;sdk;dotnet</PackageTags>
    <PackageProjectUrl>https://github.com/yourusername/mistral-sdk-dotnet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/yourusername/mistral-sdk-dotnet</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    
    <!-- Documentation settings -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>$(OutputPath)$(AssemblyName).xml</DocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn> <!-- Suppress warnings for undocumented public members -->
    
    <!-- Version information -->
    <Version>1.0.0</Version>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
  </PropertyGroup>

  <ItemGroup>
    <!-- System.Text.Json is included in .NET 8.0 -->
    <!-- System.ComponentModel.DataAnnotations is included in .NET 8.0 -->
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

</Project>
